{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$lib/*": [
                "src/lib/*"
            ],
            "$app/*": [
                "src/routes/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "public/*"
    ]
}